<div class="span16">
  <header class="page-header">
    <h1>Application: <%= @application.name %></h1>
  </header>
</div>

<div class="span10">
  <h4>Callback url:</h4>
  <p><code id="callback_url"><%= @application.redirect_uri %></code></p>

  <h4>Application Id:</h4>
  <p><code id="application_id"><%= @application.uid %></code></p>

  <h4>Secret:</h4>
  <p><code id="secret"><%= @application.secret %></code></p>

  <h4>Email Subject Prefix:</h4>
  <p><%= @application.email_subject_prefix %></p>

  <h4>Email From Address:</h4>
  <p><%= @application.email_from_address %></p>

  <h4>Trusted?</h4>
  <p><%= @application.trusted ? 'Yes' : 'No' %></p>

  <h4>Link to authorization code:</h4>
  <p><%= link_to 'Authorize', oauth_authorization_path(:client_id => @application.uid, :redirect_uri => @application.redirect_uri, :response_type => 'code' ) %></p>
</div>

<div class="span6">
  <h3>Actions</h3>
  <p><%= link_to 'Application List', oauth_applications_path %></p>
  <% if OSU::AccessPolicy.action_allowed?(:update, @user, @application) %>
  <p><%= link_to 'Edit', edit_oauth_application_path(@application) %></p>
  <% end %>
  <% if OSU::AccessPolicy.action_allowed?(:destroy, @user, @application) %>
  <p><%= link_to 'Remove', [:oauth, @application], :method => :delete, :data => { :confirm => "Are you sure?" } %></p>
  <% end %>
</div>
